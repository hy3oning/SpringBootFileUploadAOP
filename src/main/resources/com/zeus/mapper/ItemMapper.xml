<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zeus.mapper.ItemMapper">

	<insert id="create" parameterType="Item">
		INSERT INTO
		ITEM(ID,NAME,PRICE,DESCRIPTION,URL)VALUES(ITEM_SEQ.NEXTVAL,#{name},#{price},#{description},#{url})
	</insert>

	<select id="read" resultType="Item">
		SELECT ID,NAME,PRICE,DESCRIPTION,URL FROM ITEM WHERE ID = #{id}
	</select>

	<select id="list" resultType="Item">
		SELECT * FROM ITEM ORDER BY ID DESC
	</select>

	<update id="update">
	</update>

	<delete id="delete">
	</delete>

	<select id="getPicture" resultType="String">
	SELECT URL FROM ITEM WHERE ID = #{id}
	</select>

</mapper>